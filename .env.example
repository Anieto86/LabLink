# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration (PostgreSQL)
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_NAME=lablink_db
DB_PORT=5432

# Alternative: Full Database URL (overrides individual DB_* variables)
# DATABASE_URL=postgresql://username:password@localhost:5432/lablink_db

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
SECRET_KEY=your_super_secret_jwt_key_here_minimum_32_characters
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_also_32_chars
ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_EXPIRES=10m
JWT_ALG=HS256

# Google OAuth (if needed)
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com

# Development Tools
# OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault (optional)
